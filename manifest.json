{
// Author Information
  "author": "Kevin Kirr",
  "homepage_url": "http://personabrowser.gpii.eu/",

// Extension Information
  "name": "Persona Simulator",
  "description": "Helps to imagine how it would be,searching the web with an disability. Choose one of the provided Personas and surf through the web.",
  "version": "1.1",
  "manifest_version": 2,
  "icons": { "16": "img/icon.png",
             "48": "img/icon.png",
            "128": "img/icon.png" },

 // Extension UI
  "browser_action": {
    "default_icon":  "img/icon.png",
    "default_title": "Persona Simulator",
    "default_popup": "popup.html" },

// Permission for interaction
"permissions": [
  "http://personabrowser.gpii.eu/",
  "http://personabrowser.gpii.eu/personas.json",
  "http://google.de/"
]

}
